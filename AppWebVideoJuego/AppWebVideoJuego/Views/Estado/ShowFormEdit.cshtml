
@{
	ViewBag.Title = "ShowFormEdit";
	AppWebVideoJuego.Models.Estado model = (AppWebVideoJuego.Models.Estado)ViewData["model"];
}

<h2>Editar Estado</h2>

<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Editar Tarea N° @Html.Raw(model.GetId())</h3>
	</div>
	<div class="panel-body">
		<form action="/Estado/SaveFormEdit" method="post">
			<input type="hidden" name="id" value="@Html.Raw(model.GetId())" />
			<div class="form-group">
				<label>Nombre: </label>
				<input type="text" class="form-control" required placeholder="Nombre Tarea" name="txtNombre"
					   value="@Html.Raw(model.GetNombre())">
			</div>
			<div class="form-group">
				<label>Color: </label><br />
				<input type="color" name="fvColor" value="#ffff00" class="form-control" />
			</div>
			<div class="form-group">
				<label>Descripcion: </label>
				<textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="txtDescripcion"
						  value="@Html.Raw(model.GetDescripcion())"></textarea>
			</div>
			<input type="submit" name="btnGuardar" value="Guardar" class="btn btn-primary" />
		</form>
		</div>
</div>