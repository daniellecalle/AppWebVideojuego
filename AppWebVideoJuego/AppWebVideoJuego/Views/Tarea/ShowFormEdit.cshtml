
@{
	ViewBag.Title = "ShowFormEdit";
	AppWebVideoJuego.Models.Tarea model = (AppWebVideoJuego.Models.Tarea)ViewData["model"];
	List<AppWebVideoJuego.Models.EquipoDesarrollo> models = (List<AppWebVideoJuego.Models.EquipoDesarrollo>)ViewData["models"];

}

<h2>ShowFormEdit</h2>

<form action="/Tarea/SaveFormEdit" method="post">
	<h3><b>Editar Tarea N° @Html.Raw(model.GetId())</b></h3>

	<input type="hidden" name="id" value="@Html.Raw(model.GetId())" />

	<div class="form-group">
		<label>Nombre: </label>
		<input type="text" class="form-control" required
			   value="@Html.Raw(model.GetNombre())" name="txtNombre">
	</div>
	<div class="form-group">
		<label>Descripcion: </label>
		<input type="text" name="txtDescripcion"
			   value="@Html.Raw(model.GetDescripcion())" class="form-control" />
	</div>

	<div class="form-group">
		<label>Seleccione Equipo: </label>
		<select name="cbEquipo" class="form-control">
			@foreach (var item in models)
			{
				<option value="@item.Id">@item.Nombre</option>
			}
		</select>
	</div>

	<input type="submit" name="btnGuardar" value="Guardar" class="btn btn-primary" /> |
	@Html.ActionLink("Atras", "ShowTareas", "Tarea", new { area = "" }, new { @class = "btn btn-success" })
</form>