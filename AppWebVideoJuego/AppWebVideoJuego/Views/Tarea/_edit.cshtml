
@{
	ViewBag.Title = "_edit";
	List<AppWebVideoJuego.Models.Tarea> tareas = (List<AppWebVideoJuego.Models.Tarea>)ViewData["listaTareas"];	
}

<form action="/Tarea/Edit" method="post">
	@foreach (var objt in tareas)
	{
		<h3><b>Editar Tarea N°:</b> @objt.GetId()</h3>
		<div class="form-group">
			<label>Nombre: </label>
			<input type="text" class="form-control" required value="@objt.GetNombre()" name="txtNombre">
		</div>
		<div class="form-group">
			<label>Descripcion: </label>
			<textarea class="form-control" rows="3" name="txtDescripcion" value="@objt.GetDescripcion()"></textarea>
		</div>

		<div class="form-group">
			<label>Fecha: </label>
			<input type="date" name="txtFecha" class="form-control" value="@objt.GetFecha()">
		</div>

		<div class="form-group">
			<label>Hora: </label>
			<input type="time" name="txtHora" class="form-control" value="@objt.GetHora()">
		</div>

		<div class="form-group">
			<label>Seleccione Color Estado: </label>
			<select name="cbEstado" class="form-control">
				<option value=""></option>
			</select>
		</div>
		<input type="submit" name="btnGuardar" value="Guardar" class="btn btn-primary" />
	}

</form>
	

	
