
@{
	ViewBag.Title = "ShowFormEdit";
	AppWebVideoJuego.Models.EquipoDesarrollo model = (AppWebVideoJuego.Models.EquipoDesarrollo)ViewData["model"];
}

<div class="container">

	<div class="panel panel-default">
		<div class="panel-heading">Editar Equipo N° @Html.Raw(model.Id)</div>
		<div class="panel-body">
			<form method="post" action="/EquipoDesarrollo/SaveFormEdit">
				<input type="hidden" class="form-control"
					   name="id" value="@Html.Raw(model.Id)">
				<div class="form-group">
					<label>Nombre: </label>
					<input type="text" class="form-control" placeholder="Nombre Equipo"
						   name="txtNombre" value="@Html.Raw(model.Nombre)">
				</div>
				<div class="form-group">
					<label>Descripcion: </label>
					<textarea class="form-control" name="txtDescripcion"
							  value="@Html.Raw(model.Descripcion)"></textarea>
				</div>
				<input type="submit" name="btnGuardar" value="Guardar" class="btn btn-primary" />
			</form>
		</div>
	</div>

</div>

